<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5level [%c{1}:%M:%L] %m%n" />
        </Console>

        <File name="File" fileName="log/application.log" append="false">
            <PatternLayout pattern="%d %-5level [%c{1}:%M:%L] %m%n" />
        </File>

    </Appenders>

    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
    </Loggers>

</Configuration>
