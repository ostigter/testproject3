<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5level %m%n" />
        </Console>

        <File name="File" fileName="log/application.log" append="true">
            <PatternLayout pattern="%d %-5level %m%n" />
        </File>
    </Appenders>

    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
    </Loggers>

</Configuration>
