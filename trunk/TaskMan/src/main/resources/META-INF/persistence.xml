<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	
	<persistence-unit name="taskman" transaction-type="RESOURCE_LOCAL">
	
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<properties>
		    <!-- Database connection settings -->
		    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/taskman</property>
		    <property name="hibernate.connection.username">taskman</property>
		    <property name="hibernate.connection.password">taskman</property>
		
		    <!-- SQL dialect -->
		    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		
		    <!-- Enable Hibernate's automatic session context management -->
		    <property name="current_session_context_class">thread</property>
		
		    <!-- Disable the second-level cache  -->
		    <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		
		    <!-- Echo all executed SQL to stdout -->
		    <property name="show_sql">false</property>
		
		    <!-- Drop and re-create the database schema on startup -->
		    <property name="hbm2ddl.auto">create</property>

			<!-- Database pooling with C3P0 -->
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period" value="3000" />
		</properties>
	</persistence-unit>

</persistence>
