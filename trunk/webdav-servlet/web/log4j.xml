<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" threshold="null" debug="null">

    <appender name="webdav-console-appender" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %-5p %F - %m%n"/>
        </layout>
    </appender>

    <appender name="webdav-file-appender" class="org.apache.log4j.FileAppender">
        <param name="file" value="webdav.log"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %-5p %F - %m%n"/>
        </layout>
    </appender>

    <logger name="webdav">
        <level value="debug"/>
    </logger>

    <root>
        <priority value="info"/>
        <appender-ref ref="webdav-console-appender"/>
        <appender-ref ref="webdav-file-appender"/>
    </root>

</log4j:configuration>
