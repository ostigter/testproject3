<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

  <display-name>WebDAV Servlet</display-name>
  
  <servlet>
  	<servlet-name>WebdavServlet</servlet-name>
  	<servlet-class>webdav.WebdavServlet</servlet-class>
    <init-param>
      <param-name>ResourceHandlerImplementation</param-name>
      <param-value>webdav.LocalFileSystemStorage</param-value>
    </init-param>
    <init-param>
      <param-name>rootpath</param-name>
      <!--param-value>D:/Workspace/webdav-servlet/data</param-value-->
      <param-value>C:/LocalData/Workspace/webdav-servlet/data</param-value>
    </init-param>
    <init-param>
      <param-name>servletDebug</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <param-name>storeDebug</param-name>
      <param-value>1</param-value>
    </init-param>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>WebdavServlet</servlet-name>
  	<url-pattern>/db/*</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
</web-app>
